  </header>

  <main class="section">
    {{{ body }}}
  </main>
  {{!--partial to show alert Message--}}
  {{> alertMessage}}
  {{!--partial to show flash Message--}}
  {{> flashMessage}}
  {{!--partial to disable button if offline.--}}
